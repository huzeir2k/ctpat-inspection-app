# ====================
# SERVER CONFIGURATION
# ====================
PORT=3000
NODE_ENV=development

# ====================
# DATABASE
# ====================
# MongoDB Atlas connection string
# Format: mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@your-cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@your-cluster.mongodb.net/ctpat-inspections?retryWrites=true&w=majority

# ====================
# SUPABASE (File Storage)
# ====================
# Get these from Supabase Dashboard > Settings > API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-public-key
SUPABASE_STORAGE_BUCKET=ctpat-pdfs

# ====================
# CORS & SECURITY
# ====================
# Comma-separated list of allowed origins
# For development: http://localhost:8081,http://127.0.0.1:8081
# For production: https://yourdomain.com
CORS_ORIGIN=http://localhost:8081,http://127.0.0.1:8081

# Set to true in production with HTTPS
HTTPS_ENABLED=false

# ====================
# EMAIL SERVICE (Optional)
# ====================
# Provider: smtp, sendgrid, gmail, ethereal
EMAIL_PROVIDER=smtp

# SMTP Configuration (for smtp provider)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@ctpat-inspections.app

# SendGrid API Key (for sendgrid provider)
# SENDGRID_API_KEY=sg_xxxxxxxxxx

# ====================
# API CONFIGURATION
# ====================
# Base URL for API
API_BASE_URL=http://localhost:3000

# ====================
# RATE LIMITING
# ====================
# Requests per 15-minute window
RATE_LIMIT_GENERAL=100
RATE_LIMIT_AUTH=20

# ====================
# LOGGING & MONITORING
# ====================
# Sentry error tracking (optional)
# SENTRY_DSN=https://xxxx@sentry.io/xxxx

# ====================
# JWT/AUTH
# ====================
JWT_SECRET=your-secret-key-here
# JWT_EXPIRY=7d

